\newcommand*{\miint}[1]{%
  % #1: overlay symbol
  \miint@l{#1}{}%
}
\newcommand*{\miint@l}[2]{%
  % #1: overlay symbol
  % #2: limits
  \@ifnextchar\limits{%
    \mint@l{#1}%
  }{%
    \@ifnextchar\nolimits{%
      \miint@l{#1}%
    }{%
      \@ifnextchar\displaylimits{%
        \miint@l{#1}%
      }{%
        \miint@s{#2}{#1}%
      }%
    }%
  }%
}
\newcommand*{\miint@s}[2]{%
  % #1: limits
  % #2: overlay symbol
  \@ifnextchar_{%
    \miint@sub{#1}{#2}%
  }{%
    \@ifnextchar^{%
      \miint@sup{#1}{#2}%
    }{%
      \miint@{#1}{#2}{}{}%
    }%
  }%
}
\def\miint@sub#1#2_#3{%
  \@ifnextchar^{%
    \miint@sub@sup{#1}{#2}{#3}%
  }{%
    \miint@{#1}{#2}{#3}{}%
  }%
}
\def\miint@sup#1#2^#3{%
  \@ifnextchar_{%
    \miint@sub@sup{#1}{#2}{#3}%
  }{%
    \miint@{#1}{#2}{}{#3}%
  }%
}
\def\miint@sub@sup#1#2#3^#4{%
  \miint@{#1}{#2}{#3}{#4}%
}
\def\miint@sup@sub#1#2#3_#4{%
  \miint@{#1}{#2}{#4}{#3}%
}
\newcommand*{\miint@}[4]{%
  % #1: \limits, \nolimits, \displaylimits
  % #2: overlay symbol: -, =, ...
  % #3: subscript
  % #4: superscript
  \mathop{}%
  \mkern-\thinmuskip
  \mathchoice{%
    \miint@@{#1}{#2}{#3}{#4}%
        \displaystyle\textstyle\scriptstyle
  }{%
    \miint@@{#1}{#2}{#3}{#4}%
        \textstyle\scriptstyle\scriptstyle
  }{%
    \miint@@{#1}{#2}{#3}{#4}%
        \scriptstyle\scriptscriptstyle\scriptscriptstyle
  }{%
    \miint@@{#1}{#2}{#3}{#4}%
        \scriptscriptstyle\scriptscriptstyle\scriptscriptstyle
  }%
  \mkern-\thinmuskip
  \iint#1%
  \ifx\\#3\\\else_{#3}\fi
  \ifx\\#4\\\else^{#4}\fi
}
\newcommand*{\miint@@}[7]{%
  % #1: limits
  % #2: overlay symbol
  % #3: subscript
  % #4: superscript
  % #5: math style
  % #6: math style for overlay symbol
  % #7: math style for subscript/superscript
  \begingroup
    \sbox0{$#5\iint\m@th$}%
    \sbox2{$#5\iint_{}\m@th$}%
    \dimen2=\wd0 %
    % => \dimen2 = width of \iint
    \let\miint@limits=#1\relax
    \ifx\miint@limits\relax
      \sbox4{$#5\iint_{\kern1sp}^{\kern1sp}\m@th$}%
      \ifdim\wd4>\wd2 %
        \let\miint@limits=\nolimits
      \else
        \let\miint@limits=\limits
      \fi
    \fi
    \ifx\miint@limits\displaylimits
      \ifx#5\displaystyle
        \let\miint@limits=\limits
      \fi
    \fi
    \ifx\miint@limits\limits
      \sbox0{$#7#3\m@th$}%
      \sbox2{$#7#4\m@th$}%
      \ifdim\wd0>\dimen2 %
        \dimen2=\wd0 %
      \fi
      \ifdim\wd2>\dimen2 %
        \dimen2=\wd2 %
      \fi
    \fi
    \rlap{%
      $#5%
        \vcenter{%
          \hbox to\dimen2{%
            \hss
            $#6{#2}\m@th$%
            \hss
          }%
        }%
      $%
    }%
  \endgroup
}
